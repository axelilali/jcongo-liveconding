<%- include('partials/header') %>

<div class="container">
  <div id="item">

    <div class="col">
      <img src=<%= produit.image %> alt="">
    </div>

    <div class="col">
      <ul>
        <li><a href="/">ACCUEIL</a></li>
        <li><a href="/">AUTRES</a></li>
      </ul>
      <h3><%= produit.name %></h3>

      <span class="sous-bar" ></span>

      <p class="para-qt">$ <span class="qt" ><%= produit.prixKilo %></span>/Kilo</p>
      <p class="para-qt">$ <span class="qt"><%= produit.prixBouquet %></span>/bouquet de 25 grammes</p>
      <p class="para-qt">$ <span class="qt" ><%= produit.prixBotte %></span>/botte de 500 grammes</p>

      <p class="desc" ><%= produit.description %></p>
      <h6><%= produit.qteDispo %> en stock</h6>

      <a class="control" href="#">+</a>
      <input type="text" name="" value="1">
      <a class="control" href="#">-</a>
      <br>
      <button type="button" name="button">AJOUTER AU PANIER</button>
    </div>

    <div class="col">
    <a href=<%= `/items/${produit.id-1}` %>>  <span class="iconify" data-icon="bx:bx-left-arrow-circle" data-inline="false"></span></a>
      <a href=<%= `/items/${produit.id+1}` %>><span class="iconify" data-icon="bx:bx-right-arrow-circle" data-inline="false"></span></a>
    </div>

    
  </div>
</div>

<%- include('partials/footer') %>
